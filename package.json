{
  "name": "docwatch",
  "version": "1.0.0",
  "description": "기획자를 위한 로컬 업무 자동화 도구 - 폴더 감시부터 회의록까지",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "build:portable": "electron-builder --win portable"
  },
  "author": "DocWatch Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "app.docwatch.desktop",
    "productName": "DocWatch",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DocWatch",
      "installerLanguages": [
        "ko-KR",
        "en-US"
      ],
      "language": "1042"
    },
    "files": [
      "main.js",
      "server.js",
      "public/**/*",
      "folderList.json",
      "settings.json",
      "templates/**/*",
      "resources/**/*"
    ]
  }
}
