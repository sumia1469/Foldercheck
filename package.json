{
  "name": "docwatch",
  "version": "1.0.0",
  "description": "기획자를 위한 로컬 업무 자동화 도구 - 폴더 감시부터 회의록까지",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:win": "chcp 65001 >nul && electron .",
    "start:mac": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "build:portable": "electron-builder --win portable"
  },
  "author": "DocWatch Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "^33.4.11",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "app.docwatch.desktop",
    "productName": "DocWatch",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DocWatch",
      "installerLanguages": [
        "ko-KR",
        "en-US"
      ],
      "language": "1042"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "license.js",
      "public/**/*",
      "templates/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": ["**/*"]
      },
      {
        "from": "models",
        "to": "models",
        "filter": ["**/*"]
      },
      {
        "from": "resources/ollama",
        "to": "ollama",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.productivity",
      "identity": "BYUNGHYUN LEE (UF9B4Q43XH)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": {
        "teamId": "UF9B4Q43XH"
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "mammoth": "^1.11.0",
    "onnxruntime-node": "^1.20.1",
    "openai": "^6.15.0",
    "unzipper": "^0.12.3",
    "wav-decoder": "^1.3.0",
    "whisper-node": "^1.1.1",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  }
}
